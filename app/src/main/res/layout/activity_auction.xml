<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AuctionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgShowPhoto"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp" />

        <Button
            android:id="@+id/btnSelectBookPhoto"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:textColor="@android:color/white"
            android:text="開啟相機" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:layout_marginBottom="10sp"
            android:hint="書名"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:layout_marginBottom="10sp"
        android:hint="原始價格"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBookOPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:layout_marginBottom="10sp"
            android:hint="拍賣價格"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spBookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="35sp"
            android:entries="@array/spinner_category"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spBookStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="35sp"
            android:entries="@array/spinner_status"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:layout_marginBottom="10sp"
            android:hint="商品說明"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBookExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="35sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAuctionCancel"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="10sp"
                android:layout_weight="1.0"
                android:textSize="14sp"
                android:background="@drawable/btn_shape"
                android:backgroundTint="#ff9386"
                android:textColor="@android:color/white"
                android:text="取消刊登" />

            <Button
                android:id="@+id/btnAuction"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1.0"
                android:textSize="14sp"
                android:background="@drawable/btn_shape"
                android:textColor="@android:color/white"
                android:text="刊登" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>