<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PostDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgShowDetailPhoto"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10sp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="商品詳情"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品名稱"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book Name"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品原價"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookOPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book OPrice"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品售價"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book Price"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品分類"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book Category"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品狀態"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book Status"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="上架日期"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookTimeStamp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book TimeStamp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="商品說明"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDetailBookExplain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="end"
                            android:text="Book Explain"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_gravity="bottom|start"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4D64C5C9"
        app:icon="@mipmap/outline_favorite_border_white_18"
        app:iconTint="@android:color/white"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="加入購物車"
        android:layout_gravity="bottom|center"
        android:backgroundTint="#4D000000"
        android:textColor="#FFFFFF"
        app:icon="@mipmap/outline_add_shopping_cart_white_18"
        app:iconTint="@android:color/white"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>